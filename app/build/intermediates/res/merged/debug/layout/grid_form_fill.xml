<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@color/black_opacity_15"
    android:layout_margin="@dimen/activity_details_margin"
    android:weightSum="3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:id="@+id/grid_form_fill_image"
        android:layout_margin="@dimen/activity_details_margin"
        android:adjustViewBounds="true"
        android:layout_gravity="left|top"
        android:scaleType="centerInside"
        android:layout_weight="2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:id="@+id/grid_form_fill_kindOfAnimal"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_details_margin"
            android:textColor="@color/colorAmber"
            android:textSize="@dimen/optim_text_size"/>

</LinearLayout>