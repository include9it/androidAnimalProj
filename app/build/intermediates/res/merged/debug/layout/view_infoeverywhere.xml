<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_opacity_15">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/view_infoeverywhere_info"
    android:textSize="50sp"
    android:layout_gravity="center"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="red"
            android:background="@color/colorRed"
            android:textColor="@color/colorWhite"
            android:id="@+id/view_infoeverywhere_red_button"
            android:layout_margin="2dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="green"
            android:background="@color/colorGreen"
            android:layout_margin="2dp"
            android:id="@+id/view_infoeverywhere_green_button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blue"
            android:background="@color/colorBlue"
            android:textColor="@color/colorWhite"
            android:layout_margin="@dimen/button_margin"
            android:id="@+id/view_infoeverywhere_blue_button"/>
    </LinearLayout>

</LinearLayout>