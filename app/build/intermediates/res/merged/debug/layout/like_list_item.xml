<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black_opacity_15"
        android:layout_margin="@dimen/activity_details_margin"
        android:weightSum="4">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <TableRow android:weightSum="2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/like_list_item_image"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/like_list_item_kindOfAnimal"
                        android:gravity="center"
                        android:text="bla"
                        android:textColor="@color/colorAmber"
                        android:textSize="@dimen/optim_text_size"
                        android:layout_margin="@dimen/activity_details_margin"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/like_list_item_habitat"
                        android:gravity="center"
                        android:text="bla"
                        android:textColor="@color/colorAmber"
                        android:textSize="@dimen/optim_text_size"
                        android:layout_margin="@dimen/activity_details_margin"/>

                </LinearLayout>

            </TableRow>

        </TableLayout>



        q<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/like_list_item_quantityTines"
            android:gravity="center"
            android:text="bla"
            android:layout_marginLeft="@dimen/activity_details_margin"
            android:layout_marginRight="@dimen/activity_details_margin"
            android:layout_marginTop="@dimen/activity_details_margin"
            android:textColor="@color/colorAmber"
            android:textSize="@dimen/optim_text_size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/like_list_item_horns"
            android:gravity="center"
            android:text="bla"
            android:layout_marginLeft="@dimen/activity_details_margin"
            android:layout_marginRight="@dimen/activity_details_margin"
            android:layout_marginTop="@dimen/activity_details_margin"
            android:textColor="@color/colorAmber"
            android:textSize="@dimen/optim_text_size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/like_list_item_weight"
            android:gravity="center"
            android:text="bla"
            android:layout_marginLeft="@dimen/activity_details_margin"
            android:layout_marginRight="@dimen/activity_details_margin"
            android:layout_marginTop="@dimen/activity_details_margin"
            android:textColor="@color/colorAmber"
            android:textSize="@dimen/optim_text_size"/>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>