<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_opacity_15"
        android:layout_margin="@dimen/activity_details_margin"
        android:layout_weight="1"
        android:weightSum="3"
        android:id="@+id/like_grid_item_left_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="@dimen/activity_details_margin"
            android:adjustViewBounds="true"
            android:layout_gravity="left|top"
            android:scaleType="centerInside"
            android:layout_weight="2"
            android:id="@+id/like_grid_item_left_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_details_margin"
            android:textColor="@color/colorAmber"
            android:textSize="@dimen/optim_text_size"
            android:id="@+id/like_grid_item_left_description"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_opacity_15"
        android:layout_margin="@dimen/activity_details_margin"

        android:layout_weight="1"
        android:weightSum="3"
        android:id="@+id/like_grid_item_right_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="@dimen/activity_details_margin"
            android:adjustViewBounds="true"
            android:layout_gravity="left|top"
            android:scaleType="centerInside"
            android:layout_weight="2"
            android:id="@+id/like_grid_item_right_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_details_margin"
            android:textColor="@color/colorAmber"
            android:textSize="@dimen/optim_text_size"
            android:id="@+id/like_grid_item_right_description"/>

    </LinearLayout>

</LinearLayout>