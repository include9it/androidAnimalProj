<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grassbackground">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_opacity_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_animal_activity_kind_of_animals"
            android:textColor="@color/colorAmber"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAmber"
            android:id="@+id/activity_add_animal_kind_of_animal"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_opacity_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_animal_activity_habitat"
            android:textColor="@color/colorAmber"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAmber"
            android:id="@+id/activity_add_animal_habitat"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_opacity_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_animal_activity_quantity_tines"
            android:textColor="@color/colorAmber"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAmber"
            android:id="@+id/activity_add_animal_quantity_tines"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_opacity_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_animal_activity_horns"
            android:textColor="@color/colorAmber"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAmber"
            android:id="@+id/activity_add_animal_horns"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_opacity_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_animal_activity_weight"
            android:textColor="@color/colorAmber"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAmber"
            android:id="@+id/activity_add_animal_weight"/>

    </TableRow>

    <com.example.ebutorins.animalaplication.customViews.InfoEverywhereView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"></com.example.ebutorins.animalaplication.customViews.InfoEverywhereView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:layout_gravity="center"
        android:id="@+id/activity_add_animal_save"/>

</LinearLayout>
